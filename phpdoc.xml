<?xml version="1.0" encoding="UTF-8" ?>
<phpdoc>
    <title>NovemBit i18n - Internationalization library</title>
    <parser>
        <target>runtime/tmp/docs</target>
        <default-package-name>NovemBit\i18n</default-package-name>
    </parser>
    <transformer>
        <target>docs</target>
    </transformer>
    <transformations>
        <template name="markdown-public"/>
<!--        <template name="clean"/>-->
        <template name="checkstyle"/>
        <template name="responsive"/>
    </transformations>
    <files>
        <directory>src</directory>
    </files>
</phpdoc>